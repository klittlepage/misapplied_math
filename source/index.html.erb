---
pageable: true
per_page: 3
blog: blog
layout: site_page
---

<% page_articles.each_with_index do |article, i| %>
  <article>
    <header class="row">
      <div class="col-sm-12">
        <h1><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></h1>
      </div>
    </header>
    <section class="row">
      <div class="col-sm-12">
        <%= article.body %>
      </div>
    </section>
    <footer class="row">
      <div class="col-sm-12 text-center">
        <% article.tags.sort.map do |tag| %>
        <% link_to tag_path(tag) do %>
        <span class="badge"><%= tag %></span>
        <% end %>
        <% end %>
      </div>
    </footer>
  </article>
  <hr>
<% end %>

<%= partial('partials/pagination',
            locals: { paginate: defined?(paginate) ? paginate : false,
                      num_pages: defined?(num_pages) ? num_pages : nil,
                      prev_page: defined?(prev_page) ? prev_page : nil,
                      next_page: defined?(next_page) ? next_page : nil }) %>