<article>
  <div class="row">
    <div class="col-sm-2">
      <% unless defined?(omit_date) and omit_date %>
      <h1 class="date-time">
          <time datetime="<%= article.date.to_time.iso8601 %>">
            <% unless defined?(omit_month) and omit_month %>
            <span class="month"><%= article.date.strftime('%b') %></span>
            <% end %>
            <span class="day"><%= article.date.strftime('%d') %></span>
            <span class="year"></span>
          </time>
      </h1>
      <% end %>
    </div>
    <div class="col-sm-10">
      <h1>
        <%= link_to article.title, article.url %>
      </h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-10">
      <footer class="archive">
        <span class="categories">
          Posted in <%= article.tags.sort.map { |tag| link_to "#{tag}", tag_path(tag) }.join(', ') %>
        </span>
      </footer>
    </div>
  </div>
</article>
